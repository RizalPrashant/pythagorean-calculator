<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.prashantrizal.android.pythagoreancalculator">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/pythagoras"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar">
        <activity android:name=".pythagorascalculator.StepsActivity"></activity>
        <activity android:name=".pythagorascalculator.HelpActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".pythagorascalculator.CalculatorActivity" />
    </application>

</manifest>